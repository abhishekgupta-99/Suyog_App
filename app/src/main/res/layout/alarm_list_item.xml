<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:padding="5dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp">

<RelativeLayout
    android:padding="5dp"
    android:layout_width="wrap_content"
    android:id="@+id/zone"
    android:layout_height="wrap_content">

    <!--<TextView-->
        <!--android:layout_width="30dp"-->
        <!--android:layout_margin="5dp"-->
        <!--android:background="@drawable/bg_circle"-->
        <!--android:text="W"-->
        <!--android:id="@+id/zone_initials"-->
        <!--android:textColor="#ffff"-->
        <!--android:gravity="center"-->
        <!--android:layout_height="30dp" />-->

    <TextView
        android:id="@+id/textView_site_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_margin="3dp"
        android:text="Ayan Apartment"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true"
        app:cardElevation="3dp"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="@color/lightblue"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/textView_zone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:padding="5dp"
            android:text="Zone"
            android:textColor="@android:color/black"
            android:textSize="15sp"
           />

    </android.support.v7.widget.CardView>

</RelativeLayout>

        <View

            android:layout_below="@+id/zone"
            android:layout_marginTop="4dp"
            android:background="@color/grey"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    <RelativeLayout
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:id="@+id/site_name"
        android:layout_below="@+id/zone"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="30dp"
            android:id="@+id/tower_icon"
            android:layout_margin="5dp"
            android:src="@drawable/tower_icon"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/textView_site_id"
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:layout_marginLeft="35dp"
            android:layout_alignLeft="@+id/tower_icon"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="Location"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_margin="3dp"
            android:text="hbbdbhdhdhdd" />
    </RelativeLayout>

        <View
            android:layout_below="@+id/site_name"
            android:layout_marginTop="4dp"
            android:background="@color/grey"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>




    <RelativeLayout
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:id="@+id/alarm_rl"
        android:layout_below="@+id/site_name"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="30dp"
            android:id="@+id/bell_icon"
            android:layout_margin="5dp"
            android:src="@drawable/ic_alarm"
            android:layout_height="30dp" />


        <!--<TextView-->
            <!--android:id="@+id/alarm_text"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:padding="10dp"-->
            <!--android:layout_marginLeft="35dp"-->
            <!--android:layout_alignLeft="@+id/bell_icon"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textColor="@android:color/black"-->
            <!--android:text="Alarms"-->
            <!--android:textSize="15sp" />-->
        <!---->

        <com.hootsuite.nachos.NachoTextView
            android:id="@+id/nacho_text_view"
            android:layout_toRightOf="@+id/bell_icon"
            android:layout_toEndOf="@+id/bell_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:chipSpacing="3dp"
            app:chipBackground="@color/white"
            app:chipTextColor="@color/black"
            app:chipTextSize="16dp"
            app:chipHeight="30dp"
            app:chipVerticalSpacing="3dp"/>
        <!--app:chipHorizontalSpacing="4dp"-->



        <TextView
            android:id="@+id/textView_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_margin="3dp"
            />
    </RelativeLayout>

    <View
        android:layout_below="@+id/site_name"
        android:layout_marginTop="4dp"
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>



</RelativeLayout>
    </android.support.v7.widget.CardView>
